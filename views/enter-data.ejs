<!DOCTYPE html>
<html>
  <head>
    <title>Student Information Form</title>
    <link rel="stylesheet"  href="enter-data-style.css">
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
   
  </head>
 
  <body>
    <a href="/" class="btn btn-primary home-button">Home</a>
    
    <form class="p-4 bg-white" action="/enter-data" method="POST">
      <h1 class="text-white">Student Information Form</h1>

      <div class="mb-3">
        <label for="studentID" class="form-label">Student ID:</label>
        <input
          type="number"
          id="studentID"
          name="_id"
          class="form-control"
          required
          oninvalid="this.setCustomValidity('Please enter your name')"
        />
      </div>

      <div class="mb-3">
        <label for="attendance" class="form-label"
          >Attendance Percentage:</label
        >
        <input
          type="number"
          id="attendance"
          name="attendance"
          class="form-control"
          required
        />
      </div>

      <h3 class="mb-3">Subject Marks (out of 100)</h3>

      <div class="mb-3">
        <label for="subject1" class="form-label">Math:</label>
        <input
          type="number"
          id="subject1"
          name="Math"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="subject2" class="form-label">social:</label>
        <input
          type="number"
          id="subject2"
          name="social"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="subject2" class="form-label">English:</label>
        <input
          type="number"
          id="subject2"
          name="English"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="subject2" class="form-label">Hindi:</label>
        <input
          type="number"
          id="subject2"
          name="Hindi"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="subject2" class="form-label">Biology:</label>
        <input
          type="number"
          id="subject2"
          name="Biology"
          class="form-control"
          required
        />
      </div>

      <div class="mb-3">
        <label for="subject2" class="form-label">science:</label>
        <input
          type="number"
          id="subject2"
          name="science"
          class="form-control"
          required
        />
      </div>

      <div class="text-center">
        <button value="submit" type="submit" class="btn btn-primary">
          Submit
        </button>
      </div>
    </form>

    <% if (typeof message !=='undefined' ) { %>
    <script>
      alert("<%= message %>");
    </script>
    <% } %>
  </body>
</html>
